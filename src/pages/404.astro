---
import gif from "../assets/peek-a-duck.gif";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Page not found">
    <div class="flex flex-col justify-center items-center h-[70vh]">
        <div
            class="flex flex-col items-center justify-center rounded-3xl p-6 gap-4"
        >
            <img src={gif.src} class="w-24" alt="" />
            <p class="text-center font-heading text-xl">
                Could'nt find what you were looking for :(
            </p>
            <a
                href="/"
                class="bg-[radial-gradient(at_center_top,_var(--tw-gradient-stops))] from-[rgba(60,_91,_104,_1)] to-[rgba(4,_8,_14,_1)] px-3 py-2 rounded-md text-white"
                >Return to home</a
            >
        </div>
    </div>
</BaseLayout>
