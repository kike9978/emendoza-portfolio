---
import BaseLayout from "../layouts/BaseLayout.astro";
import CaseStudyCard from "../components/CaseStudyCard.astro";

import imageTest from "/src/assets/peek-a-duck.gif";
---

<BaseLayout title="UX Designer">
	<div class="w-full">
		<h1
			class="mt-20 md:mt-36 text-center text-7xl lg:text-9xl font-extrabold font-heading bg-clip-text text-transparent dark:filter dark:invert bg-[radial-gradient(at_right_top,_var(--tw-gradient-stops))] from-[rgba(149,_186,_177,_1)] to-[rgba(4,_26,_39,_1)]"
		>
			Hello! Iâ€™m <br />
			Enrique Mendoza
		</h1>
		<p class="text-center text-2xl md:text-3xl max-w-2xl mx-auto mt-7">
			A User Experience designer who loves solving problems and make
			useful products that users love meet the business needs
		</p>
		<div
			class="div-3 flex flex-col md:flex-row justify-center mx-auto mt-28 gap-12"
		>
			<CaseStudyCard
				number="1"
				title="New Packing Module for Farm Management"
				imagePath={"/src/assets/studies/case-cover-2.png"}
				link="./work/new-packing-module"
			/>
			<CaseStudyCard
				number="2"
				title="HYDROPONIC DASHBOARD ADMIN FARM REDESIGN"
				link="./work/hydroponic-farm-admin-dashboard-redesign"
				imagePath={"/src/assets/studies/case-cover.png"}
			/>
			<CaseStudyCard
				number="3"
				title="B2C MASSIVE MESSAGING APP"
				imagePath={"/src/assets/studies/case-cover-1.png"}
				commingSoon={true}
			/>
		</div>
		<div class="relative w-full">
			<svg
				width="644"
				height="460"
				viewBox="0 0 1000 1000"
				fill="none"
				xmlns="http://www.w3.org/2000/svg"
				class="z-10"
			>
